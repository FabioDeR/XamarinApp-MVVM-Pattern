@page "/tourist/prebooking/{Id}"
@using TabiTravel.UI.Shared.Component
@layout TouristLayout


<h3>Booking tour</h3>
<div class="form-group col-md-4">


    <EditForm Model="@Item" OnValidSubmit="@HandleValidRequest">

        <label class="mt-3 col-6" for="inputDateStart">Date Start <span class="text-danger ml-1">*</span></label>
        <InputDate class="form-control col-6" @bind-Value="@Item.DateStart" id="inputDate"></InputDate>


        <label for="inputLogo" class="mt-3">Adult(s)</label>
        <InputNumber class="form-control" @bind-Value="@Item.NbrAdult" id="inputPricePerAdult"></InputNumber>

        <label for="inputLogo" class="mt-3">Child(s)</label>
        <InputNumber class="form-control" @bind-Value="@Item.NbrChild" id="inputPricePerChild"></InputNumber>

        @if (IsShowVehicule)
        {
            <label for="inputLogo" class="mt-3">Emplacement(s)</label>
            <InputNumber class="form-control" @bind-Value="@Item.NbrVehicule" id="inputPricePerVehicule"></InputNumber>
        }

        <p class="text-muted mt-3"><span class="text-danger font-weight-normal h4 mr-1">*</span>Requiered field</p>
        <BtnSaveAndCancel ReturnLink="/tourist/index" />

        @if (!String.IsNullOrWhiteSpace(Item.ErrorMessage))
        {
            <span class="my-2 text-danger">@Item.ErrorMessage</span>
        }



        <DataAnnotationsValidator />
    </EditForm>

</div>
