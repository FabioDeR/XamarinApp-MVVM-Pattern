<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabiTravel.XamarinAPP.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--PrimaryColor-->
            <Color x:Key="ThemeColor">#099BDD</Color>
            <Color x:Key="DarkGreyColor">#121212</Color>
            <Color x:Key="LightGreyColor">#BDC3C7</Color>
            <Color x:Key="GreyColor">#848484</Color>
            <Color x:Key="WaitingColor">#FCA120</Color>
            <Color x:Key="SuccessColor">#5CB85C</Color>
            <Color x:Key="WarningColor">#E24C4B</Color>
            
            <Style TargetType="NavigationPage">
                <!--ColorTheme-->
                <Setter Property="BarBackgroundColor" Value="{StaticResource ThemeColor}" />
                <Setter Property="BarTextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="White"/>
            </Style>            
        </ResourceDictionary>
        
    </Application.Resources>
</Application>